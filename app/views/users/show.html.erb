

<style>
.button {
  background-color: rgb(87, 87, 87);
  border: none;
  color: pink;
  padding: 15px 15px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 12px;
  float:  right;
  margin: 4px 2px;
  cursor: pointer;
}

</style>


<h1 class="rainbow"><%=@user.username.capitalize%>'s Hotify Profile</h1>

<div>
<%= button_to "Edit #{@user.username.capitalize}'s Profile", edit_user_path(@user), method: 'get',class: "button"%>
<%= button_to "Delete #{@user.username.capitalize}'s Profile", @user , method: 'delete',class: "button" %> 
</div>

<%@user.playlists.each do |playlist|%>
<h3 class="rainbow">Playlist "<%=link_to "#{playlist.name}",playlist_path(playlist)%>"</h3>
<%= image_tag("#{playlist.songs.last.album_url}",  alt: "like", class: "like_image_for_index") %>
<h3>By: <%="#{@user.username}"%></h3>
<%end%>
<ul>


<h2>Your followers are</h2>
<% @followers.each do |follower| %>
  <p><%= follower.username %></p>
<% end %>
​
<h2>You follow</h2>
<% @followees.each do |followee| %>
  <p><%= followee.username %></p>
<% end %>
​
<h2>You don't follow</h2>
<% @not_following.each do |user| %>
  <p><%= user.username %></p> 
  <%= form_for user, url: { action: "follow" } do |f| %>
    <%= f.hidden_field :username %>
    <%= f.submit "Add Friend" %>
  <% end %>
<% end %>